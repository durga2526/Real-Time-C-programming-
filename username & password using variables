#include <stdio.h>
#include <string.h>

int main() {
    char correctUser[] = "admin";
    char correctPass[] = "1234";
    char user[20], pass[20];

    printf("Login Verification\n\n");

    printf("Enter username: ");
    fgets(user, 20, stdin);
    user[strcspn(user, "\n")] = '\0';

    printf("Enter password: ");
    fgets(pass, 20, stdin);
    pass[strcspn(pass, "\n")] = '\0';

    if(strcmp(user, correctUser) == 0 && strcmp(pass, correctPass) == 0) {
        printf("\nStatus: Login Successful\n");
        printf("Welcome %s\n", user);
    } else {
        printf("\nStatus: Login Failed\n");
        printf("Please check your username or password\n");
    }

    return 0;
}
