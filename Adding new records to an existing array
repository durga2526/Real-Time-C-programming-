#include <stdio.h>
#include <string.h>

struct Record {
    int id;
    char name[50];
};

int main() {
    struct Record records[100]; // maximum 100 records
    int n, i, newRecords;

    printf("Enter number of existing records: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter ID and Name for record %d: ", i + 1);
        scanf("%d %s", &records[i].id, records[i].name);
    }

    printf("How many new records do you want to add? ");
    scanf("%d", &newRecords);

    for(i = n; i < n + newRecords; i++) {
        printf("Enter ID and Name for record %d: ", i + 1);
        scanf("%d %s", &records[i].id, records[i].name);
    }

    n += newRecords;

    printf("\nUpdated Records List:\n");
    for(i = 0; i < n; i++) {
        printf("ID: %d, Name: %s\n", records[i].id, records[i].name);
    }

    return 0;
}
