#include <stdio.h>
int main()
{
    int choice;
    printf("Menu Selection Program\n");
    printf("1. Tea\n");
    printf("2. Coffee\n");
    printf("3. Juice\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    switch(choice)
    {
        case 1:
            printf("\nYou selected Tea\n");
            break;

        case 2:
            printf("\nYou selected Coffee\n");
            break;

        case 3:
            printf("\nYou selected Juice\n");
            break;

        default:
            printf("\nInvalid choice\n");
    }
    return 0;
}
