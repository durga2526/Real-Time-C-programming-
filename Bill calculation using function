#include <stdio.h>

float calculateBill(float price, int qty) {
    return price * qty;
}

int main() {
    float price, bill;
    int qty;

    printf("Calculate Bill Using Function\n\n");

    printf("Enter price: ");
    scanf("%f",&price);
    printf("Enter quantity: ");
    scanf("%d",&qty);

    bill = calculateBill(price, qty);

    printf("Total bill = %.2f\n", bill);

    return 0;
}
