#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    int i, len;

    printf("Reverse a String\n\n");

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    len = strlen(str) - 1; // exclude newline
    for(i=0; i<len; i++)
        rev[i] = str[len-1-i];
    rev[len] = '\0';

    printf("Original string: %s", str);
    printf("Reversed string: %s\n", rev);

    return 0;
}
