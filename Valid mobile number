#include <stdio.h>
#include <string.h>

int main() {
    char mobile[20];
    int i, valid=1;

    printf("Validate a Mobile Number\n\n");

    printf("Enter mobile number: ");
    fgets(mobile, sizeof(mobile), stdin);

    mobile[strcspn(mobile, "\n")] = '\0';

    if(strlen(mobile) != 10)
        valid = 0;

    for(i=0; mobile[i]!='\0'; i++) {
        if(mobile[i] < '0' || mobile[i] > '9')
            valid = 0;
    }

    if(valid)
        printf("Mobile number is valid\n");
    else
        printf("Mobile number is invalid\n");

    return 0;
}
