#include <stdio.h>

int main()
{
    int n;
    int i;
    float marks[50];

    printf("Student Marks Using Array Program\n");

    printf("Enter number of students: ");
    scanf("%d", &n);

    if(n <= 0 || n > 50)
    {
        printf("Invalid number of students\n");
        return 0;
    }

    for(i = 0; i < n; i++)
    {
        printf("Enter marks of student %d: ", i + 1);
        scanf("%f", &marks[i]);
    }

    printf("\nMarks of Students:\n");

    for(i = 0; i < n; i++)
    {
        printf("Student %d: %.2f\n", i + 1, marks[i]);
    }

    return 0;
}
