#include <stdio.h>
int main()
{
    float weight;
    float height;
    float bmi;
    printf("BMI Calculation Program\n");
    printf("Enter weight (kg): ");
    scanf("%f", &weight);
    printf("Enter height (meters): ");
    scanf("%f", &height);
    if(weight <= 0 || height <= 0)
    {
        printf("Invalid input\n");
        return 0;
    }
    bmi = weight / (height * height);
    printf("\n");
    printf("BMI : %.2f\n", bmi);
    return 0;
}
