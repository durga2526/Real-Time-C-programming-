#include <stdio.h>
int main()
{
    int units;
    float billAmount;

    printf("Electricity Bill Calculation Program\n");
    printf("Enter number of units consumed: ");
    scanf("%d", &units);
    if(units <= 50)
    {
        billAmount = units * 1.5;
    }
    else if(units <= 150)
    {
        billAmount = (50 * 1.5) + ((units - 50) * 2.5);
    }
    else if(units <= 300)
    {
        billAmount = (50 * 1.5) + (100 * 2.5) + ((units - 150) * 4);
    }
    else
    {
        billAmount = (50 * 1.5) + (100 * 2.5) + (150 * 4) + ((units - 300) * 6);
    }
    if(billAmount < 50)
        billAmount = 50;
    printf("\n");
    printf("Units Consumed : %d\n", units);
    printf("Total Bill     : Rs. %.2f\n", billAmount);
    return 0;
}
