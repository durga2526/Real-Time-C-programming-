#include <stdio.h>

int checkPrime(int num) {
    int i;
    if(num <= 1)
        return 0;

    for(i = 2; i <= num / 2; i++) {
        if(num % i == 0)
            return 0;
    }
    return 1;
}

int main() {
    int number, result;

    printf("Check Prime Number Using Function\n\n");

    printf("Enter a number: ");
    scanf("%d", &number);

    printf("\nEntered number = %d\n", number);

    result = checkPrime(number);

    if(result == 1)
        printf("The number is a prime number\n");
    else
        printf("The number is not a prime number\n");

    return 0;
}
