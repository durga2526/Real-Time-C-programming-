#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    int i, len, flag=1;

    printf("Check Whether a String is Palindrome\n\n");

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    len = strlen(str) - 1;

    for(i=0;i<len;i++)
        rev[i] = str[len-1-i];
    rev[len] = '\0';

    for(i=0;i<len;i++) {
        if(str[i] != rev[i]) {
            flag = 0;
            break;
        }
    }

    if(flag)
        printf("String is a palindrome\n");
    else
        printf("String is not a palindrome\n");

    return 0;
}
