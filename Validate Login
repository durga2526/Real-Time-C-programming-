#include <stdio.h>
#include <string.h>

int validateLogin(char username[], char password[]) {
    char correctUser[] = "admin";
    char correctPass[] = "1234";

    if(strcmp(username, correctUser) == 0 && strcmp(password, correctPass) == 0)
        return 1; // valid
    else
        return 0; // invalid
}

int main() {
    char user[20], pass[20];
    int valid;

    printf("Validate Login Using Function\n\n");

    printf("Enter username: ");
    scanf("%s", user);

    printf("Enter password: ");
    scanf("%s", pass);

    valid = validateLogin(user, pass);

    if(valid)
        printf("\nLogin successful! Welcome %s\n", user);
    else
        printf("\nInvalid username or password\n");

    return 0;
}
