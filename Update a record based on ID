#include <stdio.h>
#include <string.h>

struct Record {
    int id;
    char name[50];
};

int main() {
    struct Record records[100];
    int n, i, updateId;

    printf("Enter number of records: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter ID and Name for record %d: ", i + 1);
        scanf("%d %s", &records[i].id, records[i].name);
    }

    printf("Enter ID of record to update: ");
    scanf("%d", &updateId);

    for(i = 0; i < n; i++) {
        if(records[i].id == updateId) {
            printf("Enter new Name: ");
            scanf("%s", records[i].name);
            printf("Record Updated! ID: %d, Name: %s\n", records[i].id, records[i].name);
            return 0;
        }
    }

    printf("Record with ID %d not found.\n", updateId);

    return 0;
}
