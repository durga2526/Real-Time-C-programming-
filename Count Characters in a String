#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int count;

    printf("Count Characters in a String\n\n");

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    count = strlen(str) - 1; // exclude newline

    printf("String: %s", str);
    printf("Number of characters = %d\n", count);

    return 0;
}
