#include <stdio.h>
#include <string.h>
struct Item {
    int id;
    char name[50];
    int quantity;
    float price;
};
int main() {
    struct Item inventory[100];
    int n = 0, choice, i, id;
    do {
        printf("\nInventory System:\n");
        printf("1. Add Item\n2. Display Items\n3. Search Item by ID\n4. Update Item by ID\n5. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);
        switch(choice) {
            case 1: // Add Item
                printf("Enter ID, Name, Quantity, Price: ");
                scanf("%d %s %d %f", &inventory[n].id, inventory[n].name, &inventory[n].quantity, &inventory[n].price);
                n++;
                break;
            case 2: // Display Items
                printf("\nAll Items:\n");
                for(i = 0; i < n; i++)
                    printf("ID:%d Name:%s Qty:%d Price:%.2f\n",
                           inventory[i].id, inventory[i].name, inventory[i].quantity, inventory[i].price);
                break;
            case 3: // Search Item
                printf("Enter ID to search: ");
                scanf("%d", &id);
                for(i = 0; i < n; i++) {
                    if(inventory[i].id == id) {
                        printf("Found: ID:%d Name:%s Qty:%d Price:%.2f\n",
                               inventory[i].id, inventory[i].name, inventory[i].quantity, inventory[i].price);
                        break;
                    }
                }
                if(i == n) printf("Item with ID %d not found.\n", id);
                break; 
            case 4: // Update Item
                printf("Enter ID to update: ");
                scanf("%d", &id);
                for(i = 0; i < n; i++) {
                    if(inventory[i].id == id) {
                        printf("Enter new Name, Quantity, Price: ");
                        scanf("%s %d %f", inventory[i].name, &inventory[i].quantity, &inventory[i].price);
                        printf("Item Updated: ID:%d Name:%s Qty:%d Price:%.2f\n",
                               inventory[i].id, inventory[i].name, inventory[i].quantity, inventory[i].price);
                        break;
                    }
                }
                if(i == n) printf("Item with ID %d not found.\n", id);
                break;
            case 5:
                printf("Exiting...\n");
                break;
            default:
                printf("Invalid choice!\n");
        }
    } while(choice != 5);
    return 0;
}
