#include <stdio.h>

int main() {
    FILE *fp;
    char ch;
    int count = 0;

    printf("Count Records in a File\n\n");

    fp = fopen("data.txt", "r");

    if(fp == NULL) {
        printf("Unable to open file\n");
        return 0;
    }

    while((ch = fgetc(fp)) != EOF) {
        if(ch == '\n') {
            count++;
        }
    }

    fclose(fp);

    if(count == 0)
        printf("No records found\n");
    else {
        printf("File opened successfully\n");
        printf("Number of records: %d\n", count);
    }

    return 0;
}
