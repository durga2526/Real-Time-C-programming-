#include <stdio.h>
int main()
{
    int number;
    int count = 0;

    printf("Digit Count Program\n");

    printf("Enter a number: ");
    scanf("%d", &number);

    if(number == 0)
    {
        count = 1;
    }
    else
    {
        if(number < 0)
        {
            number = -number;
        }

        while(number > 0)
        {
            number = number / 10;
            count++;
        }
    }

    printf("\n");
    printf("Number of Digits: %d\n", count);

    return 0;
}
