#include <stdio.h>
int main()
{
    float length;
    float breadth;
    float area;
    float perimeter;

    printf("Rectangle Calculation Program\n");
    printf("Enter length: ");
    scanf("%f", &length);

    printf("Enter breadth: ");
    scanf("%f", &breadth);
    if(length <= 0 || breadth <= 0)
    {
        printf("Invalid input\n");
        return 0;
    }
    area = length * breadth;
    perimeter = 2 * (length + breadth);
    printf("\n");
    printf("Area      : %.2f\n", area);
    printf("Perimeter : %.2f\n", perimeter);
    return 0;
}
